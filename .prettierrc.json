{
    "trailingComma": "none",
    "printWidth": 120,
    "tabWidth": 4,
    "semi": true,
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 120,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false,
                "explicitTypes": "always"
            }
        },
        {
            "files": "*.ts, *.js",
            "options": {
                "bracketSpacing": false
            }
        }
    ]
}
